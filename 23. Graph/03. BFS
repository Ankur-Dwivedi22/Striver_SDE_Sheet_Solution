class Solution {
  public:
    // Function to return Breadth First Traversal of given graph.
    vector<int> bfs(vector<vector<int>> &adj) {
        // Code here
        int n = adj.size();
        vector<int> vis(n, 0) , ans;
        queue<int> q;
        q.push(0);
        vis[0] = 1;
        ans.push_back(0);
        while(!q.empty()){
            int node = q.front();
            q.pop();
            
            for(int adjNode : adj[node]){
                if(!vis[adjNode]){
                    q.push(adjNode);
                    vis[adjNode] = 1;
                    ans.push_back(adjNode);
                }
            }
        }
        
        return ans;
    }
};