class Solution {
public:
    bool canFinish(int n, vector<vector<int>>& pre) {
        vector<vector<int>> adj(n);
        vector<int> indeg(n, 0);
        for(auto it : pre){
            int u = it[0] , v = it[1];
            adj[v].push_back(u);
            indeg[u]++;
        }
        queue<int> q;
        for(int i=0; i<n; i++){
            if(indeg[i] == 0){
                q.push(i);
            }
        }

        int ct = 0;
        while(!q.empty()){
            int node = q.front();
            q.pop();
            ct++;
            for(int adjNode : adj[node]){
                indeg[adjNode]--;
                if(indeg[adjNode] == 0){
                    q.push(adjNode);
                }
            }
        }

        return ct == n;
    }
};