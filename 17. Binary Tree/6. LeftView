/*

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = nullptr;
        right = nullptr;
    }
};
 */

class Solution {
  public:
    void f(Node* root, vector<int> &ans, int level){
        if(root == NULL) return;
        if(ans.size() == level){
            ans.push_back(root->data);
        }
        f(root->left, ans, level+1);
        f(root->right, ans, level+1);
    }
    vector<int> leftView(Node *root) {
        // code here
        vector<int> ans;
        f(root, ans, 0);
        return ans;
    }
};