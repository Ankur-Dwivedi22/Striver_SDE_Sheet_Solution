//Position this line where user code will be pasted.
class Solution {
  private:
    void dfsStack(int node, vector<vector<int>> &adj, vector<int> &vis, stack<int> &st){
        vis[node] = 1;
        
        for(int adjNode : adj[node]){
            if(!vis[adjNode]){
                dfsStack(adjNode, adj, vis, st);
            }
        }
        st.push(node);
    }
    
    void dfs(int node, vector<vector<int>> &adj, vector<int> &vis){
        vis[node] = 1;
        
        for(int adjNode : adj[node]){
            if(!vis[adjNode]){
                dfs(adjNode, adj, vis);
            }
        }
    }
    
  public:
    int kosaraju(vector<vector<int>> &adj) {
        // code here
        int n = adj.size();
        vector<int> vis(n, 0);
        stack<int> st;
        for(int i=0; i<n; i++){
            if(!vis[i]){
                dfsStack(i,adj,vis,st);
            }
        }
        
        vector<vector<int>> revadj(n);
        for(int i=0; i<n; i++){
            vis[i] = 0;
            for(int node : adj[i]){
                revadj[node].push_back(i);
            }
        }
        
        int scc = 0;
        while(!st.empty()){
            int node = st.top();
            st.pop();
            if(!vis[node]){
                scc++;
                dfs(node,revadj,vis);
            }
        }
        
        return scc;
    }
};