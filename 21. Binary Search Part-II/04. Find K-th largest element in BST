/*The Node structure is defined as
struct Node {
    int data;
    Node *left;
    Node *right;

    Node(int val) {
        data = val;
        left = right = NULL;
    }
};
*/

// return the Kth largest element in the given BST rooted at 'root'
class Solution {
  public:
    void reverseInorder(Node* root, int &ct, int &k, int &ans){
        if(root == NULL) return;
        reverseInorder(root->right, ct, k, ans);
        ct++;
        if(ct == k){
            ans = root->data;
            return;
        }
        reverseInorder(root->left, ct, k, ans);
    }
    
    int kthLargest(Node *root, int k) {
        // Your code here
        int ans = -1 ,ct = 0;
        reverseInorder(root, ct, k, ans);
        return ans;
    }
};