class Solution {
  public:
    vector<int> countDistinct(vector<int> &arr, int k) {
        // code here
        unordered_map<int,int> freq;
        int left = 0 , right = 0;
        while(right < k){
            freq[arr[right++]]++;
        }
        vector<int> ans;
        ans.push_back(freq.size());
        while(right < arr.size()){
            freq[arr[right++]]++;
            freq[arr[left]]--;
            if(freq[arr[left]] == 0){
                freq.erase(arr[left]);
            }
            left++;
            ans.push_back(freq.size());
        }
        
        return ans;
    }
};