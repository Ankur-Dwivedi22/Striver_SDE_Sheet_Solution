
class Solution {
  public:
    vector<int> maxOfMins(vector<int>& arr) {
        // Your code here
        int n = arr.size();
        vector<int> res(n, 0);
        stack<int> st;
        
        for(int i=0; i<n; i++){
            while(!st.empty() && arr[st.top()] > arr[i]){
                int ind = st.top();
                st.pop();
                int ws = (st.empty() ? i : i - st.top() - 1);
                res[ws-1] = max(res[ws-1] , arr[ind]);
            }
            st.push(i);
        }
        
        while(!st.empty()){
            int ind = st.top();
            st.pop();
            int ws = (st.empty() ? n : n-st.top()-1);
            res[ws-1] = max(res[ws-1] , arr[ind]);
        }
        
        for(int i=n-2; i>=0; i--){
            res[i] = max(res[i+1] , res[i]);
        }
        
        return res;
    }
};